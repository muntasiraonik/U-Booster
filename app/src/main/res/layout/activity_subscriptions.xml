<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:adFendo="http://schemas.android.com/apk/res-auto"
    tools:context=".subscriptionsActivity" >



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <include

            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            layout="@layout/toolbar_layout"
            />


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/R"
        android:layout_marginTop="56dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView

            android:id="@+id/imageView3"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:srcCompat="@drawable/ic_account_circle_black_24dp" />


    </RelativeLayout>







    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_below="@id/R"
        android:id="@+id/L"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <TextView
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ChannelName: " />
        <TextView
            android:textColor="@color/black"
            android:textSize="20sp"
            android:id="@+id/watching"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Example" />


        <View
            android:layout_marginStart="5dp"
            android:layout_width="2dp"
            android:layout_height="25dp"
            android:background="@color/black" />


        <TextView
            android:textColor="@color/black"
            android:id="@+id/Coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="0"
            android:textSize="20sp" />

        <TextView
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="Coins" />




    </LinearLayout>



    <View
        android:layout_below="@id/L"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black" />








    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/L"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/B_subscribe"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:text="Subscribe" />

    <Button
        android:visibility="gone"
        android:id="@+id/Done"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:text="Done" />

    <TextView
        android:textColor="@color/startRed"
        android:gravity="center"
        android:textSize="20sp"
        android:visibility="gone"
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:text="you already done this" />



</RelativeLayout>