<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <include

            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            layout="@layout/toolbar_layout"
            />




    </LinearLayout>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp">


        <TextView

            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subscription Details" />
        <View
            android:id="@+id/v1"
            android:layout_below="@id/textView2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <androidx.cardview.widget.CardView
            android:layout_below="@id/v1"
        android:id="@+id/CardView"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#FFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:srcCompat="@drawable/baseline_email_white_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/Name"
                        android:textAlignment="textStart"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="18sp"
                        android:textStyle="bold"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:textColor="@color/black"
                        android:drawableLeft="@drawable/ic_play_circle_filled_black_24dp"
                        android:drawableStart="@drawable/ic_play_circle_filled_black_24dp"
                        android:id="@+id/views"
                        android:textAlignment="textStart"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:textColor="@color/black"
                        android:drawableLeft="@drawable/ic_monetization_on_blackview_24dp"
                        android:drawableStart="@drawable/ic_monetization_on_blackview_24dp"
                        android:id="@+id/Value"
                        android:textAlignment="textStart"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />





                    <Button
                        android:layout_marginStart="30dp"
                        android:background="@drawable/ic_add_black_24dp"
                        android:id="@+id/button3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="" />




                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black" />



            </LinearLayout>

        </LinearLayout>



    </androidx.cardview.widget.CardView>


        <TextView

            android:id="@+id/T2"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@id/CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Video Views Details" />

        <View
            android:layout_below="@id/T2"
            android:id="@+id/v2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />


        <androidx.cardview.widget.CardView
            android:layout_below="@id/v2"
            android:id="@+id/CardView2"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#FFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="2dp">

            <LinearLayout android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    app:srcCompat="@drawable/baseline_email_white_24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:textColor="@color/black"
                            android:id="@+id/Name2"
                            android:textAlignment="textStart"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textSize="18sp"
                            android:textStyle="bold"/>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:textColor="@color/black"
                            android:drawableLeft="@drawable/ic_remove_red_eye_black_24dp"
                            android:drawableStart="@drawable/ic_remove_red_eye_black_24dp"
                            android:id="@+id/views2"
                            android:textAlignment="textStart"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="16sp"
                            android:textStyle="bold"
                            />

                        <TextView

                            android:textColor="@color/black"
                            android:drawableLeft="@drawable/ic_monetization_on_blackview_24dp"
                            android:drawableStart="@drawable/ic_monetization_on_blackview_24dp"
                            android:id="@+id/Value2"
                            android:textAlignment="textStart"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="16sp"
                            android:textStyle="bold"
                            />





                        <Button
                            android:layout_marginStart="30dp"
                            android:background="@drawable/ic_play_circle_filled_black_24dp"
                            android:id="@+id/button4"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="" />




                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black" />



                </LinearLayout>

            </LinearLayout>



        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/T3"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@id/CardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Video Like Details" />

        <View
            android:layout_below="@id/T3"
            android:id="@+id/v3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />


        <androidx.cardview.widget.CardView
            android:id="@+id/CardView3"
            android:layout_below="@id/v3"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#FFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="2dp">

            <LinearLayout android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    app:srcCompat="@drawable/baseline_email_white_24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:textColor="@color/black"
                            android:id="@+id/Name3"
                            android:textAlignment="textStart"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textSize="18sp"
                            android:textStyle="bold"/>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:textColor="@color/black"
                            android:drawableLeft="@drawable/ic_remove_red_eye_black_24dp"
                            android:drawableStart="@drawable/ic_remove_red_eye_black_24dp"
                            android:id="@+id/views3"
                            android:textAlignment="textStart"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="16sp"
                            android:textStyle="bold"
                            />

                        <TextView

                            android:textColor="@color/black"
                            android:drawableLeft="@drawable/ic_monetization_on_blackview_24dp"
                            android:drawableStart="@drawable/ic_monetization_on_blackview_24dp"
                            android:id="@+id/Value3"
                            android:textAlignment="textStart"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="16sp"
                            android:textStyle="bold"
                            />





                        <Button
                            android:layout_marginStart="30dp"
                            android:background="@drawable/ic_play_circle_filled_black_24dp"
                            android:id="@+id/button5"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="" />




                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black" />



                </LinearLayout>

            </LinearLayout>



        </androidx.cardview.widget.CardView>









    </RelativeLayout>

    <ImageView
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/alert_circle_outline" />

    <TextView
        android:visibility="gone"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:id="@+id/Nwar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Campaign Available" />





</FrameLayout>

